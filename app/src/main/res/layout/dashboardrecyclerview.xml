<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
<!--    android:layout_marginStart="5dp"-->
<!--    android:layout_marginTop="5dp">-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rolephoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"


        android:src="@drawable/friends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circleorange"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rolephoto"
        app:layout_constraintEnd_toEndOf="@id/rolephoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rolephoto"
        app:layout_constraintTop_toTopOf="@id/rolephoto"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/familyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Yash Dalvi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rolephoto"
        app:layout_constraintStart_toEndOf="@+id/rolephoto"
        app:layout_constraintTop_toTopOf="@+id/rolephoto"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/roletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend"
        app:layout_constraintStart_toStartOf="@+id/familyname"
        app:layout_constraintTop_toBottomOf="@+id/familyname" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rolephoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rolephoto"
        app:srcCompat="@drawable/menu" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/postimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_marginTop="8dp"


        android:scaleType="centerCrop"
        android:src="@drawable/yashdalvi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:riv_border_color="#333333"
        app:riv_border_width="2dip"
        app:riv_corner_radius="10dip"
        app:riv_mutate_background="true" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/postimage"
        app:srcCompat="@drawable/ic_baseline_bookmark_border_24" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:src="@drawable/phonecall"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postimage" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/postimage" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/muli_extrabold"
        android:text="Hello, I am yash dalvi An android developer , an vicechairperson of mad club 2022"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roletext" />


</androidx.constraintlayout.widget.ConstraintLayout>